    </div>
  </div>
</section>


<section id="about" class="container my-5">
  <div class="row">
    <div class="col-12">
      <h2>About Me</h2>
      <p>
        I am a passionate Node.js Developer skilled in building modern, scalable web apps with MongoDB, Express, React, and Node.js. I love crafting seamless user experiences and solving real-world problems through code.
      </p>
    </div>
  </div>
</section>


<!-- Include Font Awesome in your <head> -->

<section id="skills" class="bg-light py-5">
  <div class="container">
    <h2 class="text-center mb-4">Skills</h2>
    <div class="row text-center g-4">

      <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3">
          <i class="fab fa-node-js fa-3x text-success"></i>
          <h4 class="mt-2">Node.js</h4>
          <div class="progress">
            <div class="progress-bar bg-success" style="width:90%">90%</div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3">
          <i class="fab fa-react fa-3x text-primary"></i>
          <h4 class="mt-2">React</h4>
          <div class="progress">
            <div class="progress-bar bg-primary" style="width:85%">85%</div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3">
          <i class="fas fa-database fa-3x text-info"></i>
          <h4 class="mt-2">MongoDB</h4>
          <div class="progress">
            <div class="progress-bar bg-info" style="width:80%">80%</div>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3">
          <i class="fas fa-pencil-ruler fa-3x text-danger"></i>
          <h4 class="mt-2">UI/UX</h4>
          <div class="progress">
            <div class="progress-bar bg-danger" style="width:75%">75%</div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>



  <section id="projects" class="container my-5">
    <h2 class="text-center mb-4">Projects</h2>
    <div class="row">
      <% projects.forEach(function(project){ %>
        <div class="col-md-4 mb-4 project-item">
          <div class="card shadow-sm h-100">
            <img src="<%= project.image %>" class="card-img-top" style="height:200px; object-fit:cover" alt="<%= project.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text"><%= project.description.substring(0,120) %>...</p>
              <span class="badge bg-secondary"><%= project.category %></span>
              <p class="mb-2"><small>Tech: <%= project.tech.join(", ") %></small></p>
              <div class="mt-auto">
                <% if (project.github) { %>
                  <a href="<%= project.github %>" target="_blank" class="btn btn-dark btn-sm">GitHub</a>
                <% } %>
                <% if (project.demo) { %>
                  <a href="<%= project.demo %>" target="_blank" class="btn btn-primary btn-sm">Live Demo</a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <section id="contact" class="container my-5">
    <h2 class="text-center mb-4">Contact Me</h2>
    <form method="POST" action="/send-message">
      <input class="form-control mb-2" type="text" name="name" placeholder="Name" required>
      <input class="form-control mb-2" type="email" name="email" placeholder="Email" required>
      <textarea class="form-control mb-2" name="message" placeholder="Message" required></textarea>
      <button class="btn btn-warning w-100">Send Message</button>
    </form>
  </section>

<footer class="bg-dark text-white text-center p-3">
  <div class="mb-2">
    <a href="https://linkedin.com" target="_blank" class="text-white mx-2">LinkedIn</a>
    <a href="https://github.com" target="_blank" class="text-white mx-2">GitHub</a>
    <!-- Admin Button -->
    <a href="/admin/login" class="btn btn-sm btn-warning mx-2">Admin</a>
  </div>
  <p>¬© <%= new Date().getFullYear() %> Vivek | Built with Node.js</p>
</footer>


  <script src="https://kit.fontawesome.com/a2e0ad4a05.js" crossorigin="anonymous"></script>
  <script src="/js/site.js"></script>

  <script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
  const toggleBtn = document.getElementById("darkToggle");
  const body = document.body;

  // Load saved theme
  const savedTheme = localStorage.getItem("theme");
  if (savedTheme) {
    body.dataset.bsTheme = savedTheme;
    toggleBtn.textContent = savedTheme === "dark" ? "‚òÄÔ∏è" : "üåô";
  }

  toggleBtn.addEventListener("click", () => {
    if(body.dataset.bsTheme === "dark") {
      body.dataset.bsTheme = "light";
      toggleBtn.textContent = "üåô";
    } else {
      body.dataset.bsTheme = "dark";
      toggleBtn.textContent = "‚òÄÔ∏è";
    }
    localStorage.setItem("theme", body.dataset.bsTheme);
  });

  // Initialize typing effect
  new Typed("#typing", {
    strings: ["Node.js Developer", "React Developer", "Full Stack Developer"],
    typeSpeed: 80,
    backSpeed: 50,
    loop: true
  });
});

</script>

</body>
</html>
